<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutWidgetItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/checkBoxWidgetItemDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorGray" />

    <ImageView
        android:id="@+id/checkBoxWidgetItemGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorGreen" />

    <ImageView
        android:id="@+id/checkBoxWidgetItemCyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorCyan" />

    <ImageView
        android:id="@+id/checkBoxWidgetItemLime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorLime" />

    <ImageView
        android:id="@+id/checkBoxWidgetItemOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorOrange" />

    <ImageView
        android:id="@+id/checkBoxWidgetItemRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorRed" />

    <ImageView
        android:id="@+id/checkBoxWidgetItemPurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/colorPurple" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_6">

        <TextView
            android:id="@+id/textWidgetItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/textWidgetItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textWidgetItemTitle"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/ic_description"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textWidgetItemReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textWidgetItemTitle"
            android:layout_toEndOf="@id/textWidgetItemDescription"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="@dimen/dp_6"
            android:drawableTint="@color/colorCyan"
            android:gravity="bottom"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>
